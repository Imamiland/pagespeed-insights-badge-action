{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
